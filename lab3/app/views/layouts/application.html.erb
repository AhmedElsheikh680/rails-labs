<!DOCTYPE html>
<html>
  <head>
    <title>Lab3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%if session[:user] %>
  <div class="container-fluid">
    <%= link_to "Home" , root_path ,class: "navbar-brand" %>
    <%= link_to "New Post" , new_post_path ,class: "navbar-brand" %>
  <%end%>
    <% unless session[:user] %>
      <div class="navbar-nav mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Register", signup_path, class: "nav-link active"%> 
        </li>
      </div>
      <div class="navbar-nav  mb-2 mb-lg-0">
        <li class="nav-item">
          <%= link_to "Login", signin_path, class: "nav-link active"%> 
        </li>
      </div>
      <% end %>
      <%if session[:user] %>
        <div class="navbar-nav  mb-2 mb-lg-0">
        <li class="nav-item">
          <%= button_to "Logout", logout_path, method: "post", class: "nav-link active"%> 
        </li>
      </div>
      <%end%>

  </div>
</nav>
    <%= yield %>
  </body>
</html>
